<?xml version="1.0" encoding="UTF-8"?>
<window>
    <!-- <defaultcontrol always="true">10</defaultcontrol> -->
    <animation type="WindowOpen" reversible="false">
        <effect type="fade" start="0" end="100" time="400" tween="sine" easing="in" />
        <effect type="zoom" start="0" end="100" time="400" center="auto" tween="quadratic" easing="out" />
    </animation>
    <controls>
        <!-- Background -->
        <control type="group">
            <width>1920</width>
            <height>1080</height>
            <control type="image">
                <texture>common/black.png</texture>
            </control>
            <control type="image">
                <texture>$INFO[Window.Property(tikiskins.videoplayer.fanart)]</texture>
                <animation effect="fade" start="0" end="25" time="0" tween="sine">WindowOpen</animation>
            </control>
        </control>
        <!-- Top Headings -->
        <control type="group">
            <control type="image">
                <left>20</left>
                <top>20</top>
                <width>60</width>
                <height>60</height>
                <aspectratio aligny="top">keep</aspectratio>
                <texture>common/infinite.png</texture>
            </control>
            <control type="label">
                <top>20</top>
                <left>1600</left>
                <width max="300">auto</width>
                <height>20</height>
                <font>font10</font>
                <align>right</align>
                <aligny>bottom</aligny>
                <label>[B]$ADDON[plugin.video.infinite 33061][/B]</label>
            </control>
            <control type="image">
                <top>20</top>
                <left>385</left>
                <height>25%</height>
                <width max="1150">auto</width>
                <aspectratio>keep</aspectratio>
                <align>bottom</align>
                <aligny>center</aligny>
                <texture background="true">$INFO[Window.Property(tikiskins.videoplayer.clearlogo)]</texture>
                <visible>!String.IsEmpty(Window.Property(tikiskins.videoplayer.clearlogo))</visible>
            </control>
            <control type="label">
                <top>150</top>
                <left>385</left>
                <width max="1150">auto</width>
                <height>30</height>
                <font>font60</font>
                <textcolor>FFCCCCCC</textcolor>
                <align>center</align>
                <aligny>bottom</aligny>
                <label>[B]$INFO[Window.Property(tikiskins.videoplayer.title)][/B]</label>
                <visible>String.IsEmpty(Window.Property(tikiskins.videoplayer.clearlogo))</visible>
            </control>
        </control>
        <!-- Video and Progress Bar -->
        <control type="group">
            <top>300</top>
            <left>285</left>
            <control type="image">
                <width>1344</width>
                <height>756</height>
                <texture>common/black.png</texture>
            </control>
            <control type="videowindow">
                <width>1344</width>
                <height>756</height>
            </control>
            <control type="progress" id="5000">
                <visible>Player.HasVideo</visible>
                <top>740</top>
                <left>10</left>
                <width>1319</width>
                <height>7</height>
                <reveal>true</reveal>
                <texturebg colordiffuse="FF302F2F">common/white.png</texturebg>
                <midtexture colordiffuse="FFB7B4BB">common/white.png</midtexture>
            </control>
        </control>
    </controls>
</window>